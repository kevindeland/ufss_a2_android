<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".VisionActivity">

    <works.com.hellovision2.Tutorial3View
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:id="@+id/HelloOpenCvView"
        opencv:show_fps="true"
        opencv:camera_id="back"

        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/rgbVal"
        android:layout_below="@+id/HelloOpenCvView"
        android:layout_alignParentStart="true"
        android:background="#8647ff"
        android:textColor="#fffbd0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:text="FLASH TOGGLE"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toggle"
            android:onClick="toggleFlash"
            android:layout_weight="3"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save Data"
            android:onClick="saveData"
            android:id="@+id/saveDataButton"
            android:layout_weight="3"/>
    </LinearLayout>



    <com.androidplot.xy.XYPlot
        android:id="@+id/colorValuePlot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ap:title="A Simple XY Plot"
        ap:rangeTitle="range"
        ap:domainTitle="domain"
        ap:lineLabels="left|bottom"
        ap:lineLabelRotationBottom="-45" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/bonusPlot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        ap:title="A Simple XY Plot"
        ap:rangeTitle="range"
        ap:domainTitle="domain"
        ap:lineLabels="left|bottom"
        ap:lineLabelRotationBottom="-45" />

</LinearLayout>
